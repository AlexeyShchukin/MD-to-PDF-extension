{
  "manifest_version": 3,
  "minimum_chrome_version": "88",
  "version": "1.0.0",
  "name": "__MSG_appName__",
  "description": "__MSG_shortDesc__",
  "default_locale": "en",
  "action": {
    "default_title": "Open md2pdf.dev"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon16.png",
        "icons/icon32.png",
        "icons/icon48.png",
        "icons/icon64.png",
        "icons/icon128.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/search*",
        "https://www.google.de/search*",
        "https://www.google.fr/search*",
        "https://www.google.pl/search*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
